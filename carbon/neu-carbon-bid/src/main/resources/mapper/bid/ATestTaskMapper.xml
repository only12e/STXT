<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.neu.carbon.bid.mapper.ATestTaskMapper">
    
    <resultMap type="ATestTask" id="ATestTaskResult">
        <result property="id"    column="id"    />
        <result property="questionDetail"    column="question_detail"    />
        <result property="testDate"    column="test_date"    />
        <result property="taskName"    column="task_name"    />
        <result property="level"    column="level"    />
        <result property="score"    column="score"    />
        <result property="totalScore"    column="total_score"    />
        <result property="replyTime"    column="reply_time"    />
        <result property="finishTime"    column="finish_time"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateTime"    column="update_time"    />
        <result property="remark"    column="remark"    />
    </resultMap>

    <sql id="selectATestTaskVo">
        select id, question_detail, test_date, task_name, level, score, total_score, reply_time, finish_time, create_time, update_time, remark from a_test_task
    </sql>

    <select id="selectATestTaskList" parameterType="ATestTask" resultMap="ATestTaskResult">
        <include refid="selectATestTaskVo"/>
        <where>  
            <if test="questionDetail != null  and questionDetail != ''"> and question_detail = #{questionDetail}</if>
            <if test="testDate != null  and testDate != ''"> and test_date = #{testDate}</if>
            <if test="taskName != null  and taskName != ''"> and task_name like concat('%', #{taskName}, '%')</if>
            <if test="level != null  and level != ''"> and level = #{level}</if>
            <if test="score != null "> and score = #{score}</if>
            <if test="totalScore != null "> and total_score = #{totalScore}</if>
            <if test="replyTime != null  and replyTime != ''"> and reply_time = #{replyTime}</if>
            <if test="finishTime != null "> and finish_time = #{finishTime}</if>
        </where>
    </select>
    
    <select id="selectATestTaskById" parameterType="Long" resultMap="ATestTaskResult">
        <include refid="selectATestTaskVo"/>
        where id = #{id}
    </select>
        
    <insert id="insertATestTask" parameterType="ATestTask" useGeneratedKeys="true" keyProperty="id">
        insert into a_test_task
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="questionDetail != null">question_detail,</if>
            <if test="testDate != null">test_date,</if>
            <if test="taskName != null">task_name,</if>
            <if test="level != null">level,</if>
            <if test="score != null">score,</if>
            <if test="totalScore != null">total_score,</if>
            <if test="replyTime != null">reply_time,</if>
            <if test="finishTime != null">finish_time,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateTime != null">update_time,</if>
            <if test="remark != null">remark,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="questionDetail != null">#{questionDetail},</if>
            <if test="testDate != null">#{testDate},</if>
            <if test="taskName != null">#{taskName},</if>
            <if test="level != null">#{level},</if>
            <if test="score != null">#{score},</if>
            <if test="totalScore != null">#{totalScore},</if>
            <if test="replyTime != null">#{replyTime},</if>
            <if test="finishTime != null">#{finishTime},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="remark != null">#{remark},</if>
         </trim>
    </insert>

    <update id="updateATestTask" parameterType="ATestTask">
        update a_test_task
        <trim prefix="SET" suffixOverrides=",">
            <if test="questionDetail != null">question_detail = #{questionDetail},</if>
            <if test="testDate != null">test_date = #{testDate},</if>
            <if test="taskName != null">task_name = #{taskName},</if>
            <if test="level != null">level = #{level},</if>
            <if test="score != null">score = #{score},</if>
            <if test="totalScore != null">total_score = #{totalScore},</if>
            <if test="replyTime != null">reply_time = #{replyTime},</if>
            <if test="finishTime != null">finish_time = #{finishTime},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="remark != null">remark = #{remark},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteATestTaskById" parameterType="Long">
        delete from a_test_task where id = #{id}
    </delete>

    <delete id="deleteATestTaskByIds" parameterType="String">
        delete from a_test_task where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>