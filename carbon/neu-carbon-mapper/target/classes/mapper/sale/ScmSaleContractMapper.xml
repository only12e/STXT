    <sql id="selectScmSaleContractVo">
        select sc.id, sc.contract_no, sc.order_id, sc.order_no, sc.work_staff, sc.customer_id, sc.delivery_date, sc.address, sc.contact, sc.contact_tel, sc.delivery_type, sc.contract_amount, sc.sign_date, sc.apply_user, sc.apply_time, sc.apply_status, sc.audit_user, sc.audit_time, sc.audit_status, sc.audit_comment, sc.remark, sc.delivery_flag, c.name as customer_name
        from scm_sale_contract sc left join scm_sale_customer c on sc.customer_id=c.id
    </sql>

    <select id="selectScmSaleContractList" parameterType="ScmSaleContract" resultMap="ScmSaleContractResult">
        <include refid="selectScmSaleContractVo"/>
        <where>  
            <if test="contractNo != null  and contractNo != ''"> and sc.contract_no like concat('%', #{contractNo}, '%')</if>
            <if test="orderId != null "> and sc.order_id = #{orderId}</if>
            <if test="orderNo != null  and orderNo != ''"> and sc.order_no like concat('%', #{orderNo}, '%')</if>
            <if test="workStaff != null  and workStaff != ''"> and sc.work_staff = #{workStaff}</if>
            <if test="customerId != null "> and sc.customer_id = #{customerId}</if>
            <if test="params.beginDeliveryDate != null and params.beginDeliveryDate != '' and params.endDeliveryDate != null and params.endDeliveryDate != ''"> and sc.delivery_date between #{params.beginDeliveryDate} and #{params.endDeliveryDate}</if>
            <if test="deliveryType != null  and deliveryType != ''"> and delivery_type = #{deliveryType}</if>
            <if test="params.beginSignDate != null and params.beginSignDate != '' and params.endSignDate != null and params.endSignDate != ''"> and sc.sign_date between #{params.beginSignDate} and #{params.endSignDate}</if>
            <if test="applyUser != null  and applyUser != ''"> and sc.apply_user = #{applyUser}</if>
            <if test="params.beginApplyTime != null and params.beginApplyTime != '' and params.endApplyTime != null and params.endApplyTime != ''"> and sc.apply_time between #{params.beginApplyTime} and #{params.endApplyTime}</if>
            <if test="applyStatus != null  and applyStatus != ''"> and sc.apply_status = #{applyStatus}</if>
            <if test="params.applyStatusList != null"> and sc.apply_status in
                <foreach collection="params.applyStatusList" item="applyStatus" open="(" close=")" separator=",">
                    #{applyStatus}
                </foreach>
            </if>
            <if test="auditUser != null  and auditUser != ''"> and sc.audit_user = #{auditUser}</if>
            <if test="params.beginAuditTime != null and params.beginAuditTime != '' and params.endAuditTime != null and params.endAuditTime != ''"> and sc.audit_time between #{params.beginAuditTime} and #{params.endAuditTime}</if>
            <if test="auditStatus != null  and auditStatus != ''"> and sc.audit_status = #{auditStatus}</if>
        </where>
    </select>
    
    <select id="selectScmSaleContractById" parameterType="Long" resultMap="ScmSaleContractScmSaleContractDetailResult">
