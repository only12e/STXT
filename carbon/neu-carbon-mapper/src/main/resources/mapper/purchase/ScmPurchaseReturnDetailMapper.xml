<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.neu.carbon.scm.mapper.ScmPurchaseReturnDetailMapper">
    
    <resultMap type="ScmPurchaseReturnDetail" id="ScmPurchaseReturnDetailResult">
        <result property="id"    column="id"    />
        <result property="returnId"    column="return_id"    />
        <result property="materialId"    column="material_id"    />
        <result property="batchNo"    column="batch_no"    />
        <result property="price"    column="price"    />
        <result property="bookQuantity"    column="book_quantity"    />
        <result property="arriveQuantity"    column="arrive_quantity"    />
        <result property="returnQuantity"    column="return_quantity"    />
        <result property="detailRemark"    column="detail_remark"    />
    </resultMap>

    <sql id="selectScmPurchaseReturnDetailVo">
        select id, return_id, material_id, batch_no, price, book_quantity, arrive_quantity, return_quantity, detail_remark from scm_purchase_return_detail
    </sql>

    <select id="selectScmPurchaseReturnDetailList" parameterType="ScmPurchaseReturnDetail" resultMap="ScmPurchaseReturnDetailResult">
        <include refid="selectScmPurchaseReturnDetailVo"/>
        <where>  
            <if test="returnId != null "> and return_id = #{returnId}</if>
        </where>
    </select>
    
    <select id="selectScmPurchaseReturnDetailById" parameterType="Long" resultMap="ScmPurchaseReturnDetailResult">
        <include refid="selectScmPurchaseReturnDetailVo"/>
        where id = #{id}
    </select>
        
    <insert id="insertScmPurchaseReturnDetail" parameterType="ScmPurchaseReturnDetail" useGeneratedKeys="true" keyProperty="id">
        insert into scm_purchase_return_detail
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="returnId != null">return_id,</if>
            <if test="materialId != null">material_id,</if>
            <if test="batchNo != null">batch_no,</if>
            <if test="price != null">price,</if>
            <if test="bookQuantity != null">book_quantity,</if>
            <if test="arriveQuantity != null">arrive_quantity,</if>
            <if test="returnQuantity != null">return_quantity,</if>
            <if test="detailRemark != null">detail_remark,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="returnId != null">#{returnId},</if>
            <if test="materialId != null">#{materialId},</if>
            <if test="batchNo != null">#{batchNo},</if>
            <if test="price != null">#{price},</if>
            <if test="bookQuantity != null">#{bookQuantity},</if>
            <if test="arriveQuantity != null">#{arriveQuantity},</if>
            <if test="returnQuantity != null">#{returnQuantity},</if>
            <if test="detailRemark != null">#{detailRemark},</if>
         </trim>
    </insert>

    <update id="updateScmPurchaseReturnDetail" parameterType="ScmPurchaseReturnDetail">
        update scm_purchase_return_detail
        <trim prefix="SET" suffixOverrides=",">
            <if test="returnId != null">return_id = #{returnId},</if>
            <if test="materialId != null">material_id = #{materialId},</if>
            <if test="batchNo != null">batch_no = #{batchNo},</if>
            <if test="price != null">price = #{price},</if>
            <if test="bookQuantity != null">book_quantity = #{bookQuantity},</if>
            <if test="arriveQuantity != null">arrive_quantity = #{arriveQuantity},</if>
            <if test="returnQuantity != null">return_quantity = #{returnQuantity},</if>
            <if test="detailRemark != null">detail_remark = #{detailRemark},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteScmPurchaseReturnDetailById" parameterType="Long">
        delete from scm_purchase_return_detail where id = #{id}
    </delete>

    <delete id="deleteScmPurchaseReturnDetailByIds" parameterType="String">
        delete from scm_purchase_return_detail where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>